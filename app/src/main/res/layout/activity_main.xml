<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#03A9F4"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textapply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Apply Now"
        android:textColor="#F3EAEA"
        android:textStyle="bold"
        android:textSize="35sp"/>

    <EditText
        android:id="@+id/editusername"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Username"
        android:layout_margin="3dp"
        android:background="#ffffff"
        android:inputType="text"/>


    <EditText
        android:id="@+id/editothers"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Other Names"
        android:layout_margin="3dp"
        android:background="#ffffff"
        android:inputType="text"/>


    <TextView
        android:id="@+id/textgender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Gender"
        android:textSize="20sp"/>


    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RadioButton
            android:id="@+id/radiomale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Male"/>

        <RadioButton
            android:id="@+id/radiofemale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Female"/>
    </RadioGroup>




    <TextView
        android:id="@+id/textfavourite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Favourites"
        android:textSize="20sp"/>

    <CheckBox
        android:id="@+id/checktravel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Travel"/>

    <CheckBox
        android:id="@+id/checkreading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reading"/>

    <CheckBox
        android:id="@+id/checkwriting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Writing"/>

    <Button
        android:id="@+id/buttonsave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Now"
        android:layout_marginTop="10dp"/>


    <Button
        android:id="@+id/buttonnext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next Page"/>



</LinearLayout>